            <StackPanel.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="Margin" Value="0,8,0,0" />
                </Style>
            </StackPanel.Resources>
            <Border
                Grid.ColumnSpan="3"
                Height="2"
                Background="#E7EFF8" />
